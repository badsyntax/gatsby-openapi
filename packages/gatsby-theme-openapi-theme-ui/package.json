{
  "name": "gatsby-theme-openapi-theme-ui",
  "description": "A gatsby theme plugin that renders the OpenAPI docs using theme-ui.",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "author": "Richard Willis <willis.rh@gmail.com>",
  "engines": {
    "node": ">=12.0"
  },
  "scripts": {
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "prepublish": "npm run build",
    "build": "tsc gatsby-node.ts ",
    "build:typescript": "npm run build",
    "watch:typescript": "npm run build -- -w",
    "lint:prettier": "prettier --check \"**/*.{ts,tsx,js,json,svg,md,yml}\"",
    "lint:eslint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "npm run lint:fix:prettier && npm run lint:eslint -- --fix",
    "lint:fix:prettier": "prettier --write '**/*.{ts,tsx,js,json,svg,md,yml}'"
  },
  "dependencies": {
    "@theme-ui/presets": "^0.3.0",
    "@theme-ui/prism": "^0.3.0",
    "@theme-ui/sidenav": "^0.3.1",
    "gatsby-plugin-react-helmet": "^3.3.10",
    "gatsby-plugin-theme-ui": "^0.3.0",
    "gatsby-theme-openapi-core": "^0.0.1",
    "openapi-types": "^1.3.5",
    "react-helmet": "^6.1.0",
    "react-icons": "^3.11.0",
    "remark-react": "^7.0.1",
    "theme-ui": "^0.3.1"
  },
  "peerDependencies": {
    "gatsby": "^2.24.52",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/react": "^16.9.48",
    "@types/theme-ui": "^0.3.6",
    "@types/unist": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gatsby": "^2.24.52",
    "gatsby-source-openapi": "^0.0.1",
    "prettier-plugin-organize-imports": "^1.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "typescript": "^4.0.2"
  },
  "eslintConfig": {
    "ignorePatterns": ["src/util/defaultPluginOptions.js"],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "react-app",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-floating-promises": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "parent",
            "sibling",
            "index"
          ]
        }
      ],
      "curly": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 80,
    "useTabs": false
  }
}
