{
  "name": "gatsby-source-openapi",
  "version": "0.0.1",
  "description": "A gatsby source plugin that parses an OpenAPI 3 specification and creates the gatsby graphql nodes.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p ./",
    "prepublish": "npm run build",
    "build:typescript": "npm run build",
    "watch:typescript": "npm run build -- -w",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:prettier": "prettier --check \"**/*.{ts,js,json,svg,md,yml}\"",
    "lint:eslint": "eslint . --ext .js,.ts",
    "lint:fix": "npm run lint:fix:prettier && npm run lint:eslint -- --fix",
    "lint:fix:prettier": "prettier --write '**/*.{ts,tsx,js,json,svg,md,yml}'"
  },
  "keywords": [
    "gatsby",
    "gatsby-plugin"
  ],
  "engines": {
    "node": ">=12.0"
  },
  "license": "MIT",
  "author": "Richard Willis <willis.rh@gmail.com>",
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.0.1",
    "openapi-snippet": "^0.9.1"
  },
  "peerDependencies": {
    "openapi-types": "^1.3.5"
  },
  "devDependencies": {
    "@types/node": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gatsby": "^2.24.52",
    "openapi-types": "^1.3.5",
    "prettier": "^2.1.1",
    "prettier-plugin-organize-imports": "^1.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "typescript": "^4.0.2"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/*.js"
    ],
    "env": {
      "browser": false,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended",
      "plugin:import/errors"
    ],
    "rules": {
      "@typescript-eslint/no-floating-promises": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "parent",
            "sibling",
            "index"
          ]
        }
      ],
      "curly": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 80,
    "useTabs": false
  }
}
